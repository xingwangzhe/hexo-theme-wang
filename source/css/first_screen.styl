.first-screen{
    position: sticky;
    height:100%;

        .lefttop-container{
            position relative
            height:50%;
            border: 1px solid #000;
            clip-path: polygon(100% 1%, 0 0, 0 100%);
            background: rgba(0, 0, 0, 0.342);
            z-index :1;

            .container{
                position:absolute;
                top:15%;
                left:15%;
            }
        }
        .rightbottom-container{
            height:50%;   
            clip-path: polygon(100% 1%, 100% 100%, 0 100%);
            border:1px solid 
            background: rgba(129, 129, 129, 0.363);
            z-index :2;

            .container{
                position:absolute;
                bottom:15%;
                right:15%;
            }
        }

        .description-io {
            position: absolute;  // 确保其在父容器内绝对定位
            z-index: 99999;  // 设置最高的z-index
            left: 50%;  // 水平居中
            top: 50%;  // 垂直居中
            transform: translate(-50%, -50%);  // 水平垂直居中
            background-color: rgba(0, 0, 0, 0.205);  // 添加半透明背景
            padding: 1rem;  // 添加内边距
            border-radius: 8px;  // 添加圆角
            text-align: center;  // 居中文本
            color: #ffffff;  // 设置文本颜色
        }

        .typed-cursor, .cursor {
            font-size: 1.5rem;
            color: #00ffff;
            animation: blink 0.7s infinite;
        }

        @keyframes blink {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0;
        }
        }



}