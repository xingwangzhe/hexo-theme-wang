header {
    position: sticky;
    top: 0;
    z-index: 1000; /* 确保header在页面最上层 */
    transition: top 0.3s;
}
.header-toggle-all{
    width : 100%;
    height: 60pX;
    display: grid;
    grid-template-columns: 1fr 1fr 2fr ;
    background-color: #33333375;
    margin:0px;
    }
.header-toggle {
    margin-left:10px;
    display: flex;
    align-content: center;  
    flex : 1 1;
    align-items: center; 
}

.logo{
    text-decoration: none;    
}
.logo-img {
 margin-right: 10px;

}
.logo-title {
    position: relative;
    top: 0px; 
    left: 2px; 
    color: white;
    margin:0;
    margin-left: 10px;
}

.navbar {
    display: flex;
    flex:1; 
    justify-content: right; 
    align-items: right; 
    //padding: 5px 0;
}

.menu {
    list-style: none; 
    margin: 0; 
    padding: 0; 
    display: flex; 
    width: 100%; 
    justify-content: space-around; 
}

.menu-item {
    flex: 1; 
    display: flex;
    align-items: center; 
    justify-content: center; 
    background-color: #33333350; 
    color: white;
    transition: background-color 0.3s ease, box-shadow 0.3s ease; 
}

.menu-item:hover {
    background-color: #444; 
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); 
}
.menu-item-link {
    width 50%; 
    height: 75%; 
    display: grid;
    place-items: center;
    margin: 0;
    text-decoration: none; 
    color: white; 
    transition: background-color 0.3s; 
    margin-left: 8px;
}
