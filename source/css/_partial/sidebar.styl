/* 定义旋转一圈的动画 */
  @keyframes spin {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  /* 定义反向旋转一圈的动画 */
  @keyframes reverse-spin {
    from {
      transform: rotate(-360deg);
    }
    to {
      transform: rotate(0deg);
    }
}
.rounded-img:hover {
