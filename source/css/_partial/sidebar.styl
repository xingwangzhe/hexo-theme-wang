/* 动画效果 */
details summary {
  outline: none;
}

details > summary::-webkit-details-marker {
  display: none;
}

details > summary::before {
  content: '> ';
  font-size: 1em;
  color: #007bff;
  margin-right: 5px;
}

details[open] > summary::before {
  content: 'v ';
}

details > summary {
  display: flex;
  align-items: center;
  padding: 5px 0;
  transition: background-color 0.3s ease;
}


details details {
  margin-left: 10px;
  transition: max-height 0.3s ease;
  overflow: hidden;
}

details[open] details {
  max-height: 1000px; /* 足够大的值以显示所有内容 */
}

details:not([open]) details {
  max-height: 0;
}
