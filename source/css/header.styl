header {
    position: fixed;
    z-index: 4;
    top: -100px; // 默认隐藏在视口上方
    width: 100%;
    transition: top 0.3s ease;
    backdrop-filter: blur(5px); // 添加毛玻璃效果
    ul {
        list-style: none;
        display: flex;
        flex-direction: row;
        justify-content: center;  // 居中对齐
        align-items: center;      // 垂直居中
        gap: 2rem;               // 添加间距
        padding: 0.5rem 2rem;    // 添加内边距
    }
    li {
        position: relative;
        padding: 0.5rem 1rem;
        transition: all 0.3s ease;
    }
    a {
        position: relative;
        text-decoration: none;
        color: #e1e1ff;
        font-weight: 500;
        padding: 0.25rem 0;
        display: inline-block;
        font-size: 1.25rem;  // 设置字体大小与h3类似
        font-family: 'Arial', sans-serif;  // 设置字体
        
        &::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            width: 0;
            height: 2px;
            background: linear-gradient(90deg, #00ffff, #66ffff);
            transform: translateX(-50%);
            transition: width 0.3s ease-in-out;
            opacity: 1;
        }
        
        &:hover {
            color: #fff;
            
            &::before {
                width: 100%;
            }
        }
    }
}

header.hidden {
    top: -100px; // 隐藏时，导航栏移到视口上方
}

header:hover {
    top: 0; // 鼠标悬停时，导航栏下移到视口内
}

.show-header {
    top: 0 !important; // 显示时移动到顶部
}

.nav-toggle {
    position: fixed;
    top: 10px;
    left: 50%; // 水平居中
    transform: translateX(-50%); // 确保完全居中
    z-index: 999; // 降低z-index，确保被header覆盖
    width: 60px;  // 固定宽度
    height: 60px; // 固定高度
    border-radius: 50%; // 恢复为圆形
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    opacity: 1;
    visibility: visible; // 添加可见性属性
    transition: all 0.3s ease; // 修改过渡效果包含所有属性
    
    &.nav-hidden {
        opacity: 0;
        visibility: hidden;
        transform: translateX(-50%) scale(0.8);
        pointer-events: none;
    }
    
    img {
        width: 25px;  // 稍微放大图标
        height: 25px;
        transition: transform 0.3s ease;
        animation: 
            pulse 1.5s infinite ease-in-out,    // 加快动画速度
            breathing 1.5s infinite ease-in-out; // 同步两个动画
        filter: drop-shadow(0 0 3px rgba(66,185,231,0.3));
    }
    
    &:hover img {
        animation: none;
        transform: translateY(3px);  // 增加悬停时的移动距离
        filter: drop-shadow(0 0 8px rgba(66,185,231,0.8));  // 悬停时保持发光
    }
}

// 删除之前的 header.show-header + .nav-toggle 相关样式

@keyframes pulse {
    0% {
        transform: scale(1);
        opacity: 0.8;
    }
    50% {
        transform: scale(1.3);  // 增大缩放比例
        opacity: 1;
    }
    100% {
        transform: scale(1);
        opacity: 0.8;
    }
}

@keyframes breathing {
    0% {
        filter: drop-shadow(0 0 3px rgba(66,185,231,0.3));
    }
    50% {
        filter: drop-shadow(0 0 15px rgba(66,185,231,1));  // 增强发光效果
    }
    100% {
        filter: drop-shadow(0 0 3px rgba(66,185,231,0.3));
    }
}