pre code.hljs {
  display: block;
  overflow-x: auto;
  padding: 1em;
  font-family: Consolas, Monaco, 'Andale Mono', monospace;
  line-height: 1.5;
}

code.hljs {
  padding: 3px 5px;
  border-radius: 3px;
}

