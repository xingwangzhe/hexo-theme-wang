.hljs,
.highlight {
  color: #a9b7c6;
  background: #282b2e;
  position: relative;
  border-radius: 10px;
  
  .number,
  .literal,
  .symbol,
  .bullet,
  .hljs-number,
  .hljs-literal,
  .hljs-symbol,
  .hljs-bullet {
    color: #6897BB;
  }
  
  .keyword,
  .selector-tag,
  .deletion,
  .heighlight-keyword,
  .highlight-deletion,
  .highlight-selector-tag {
    color: #cc7832;
  }
  
  .variable,
  .template-variable,
  .link,
  .hljs-variable,
  .hljs-template-variable,
  .hljs-link {
    color: #629755;
  }
  
  .comment,
  .quote,
  .hljs-comment,
  .hljs-quote {
    color: #808080;
  }
  
  .meta,
  .hljs-meta {
    color: #bbb529;
  }
  
  .string,
  .attribute,
  .addition,
  .hljs-string,
  .hljs-attribute,
  .hljs-addition {
    color: #6A8759;
  }
  
  .section,
  .title,
  .type,
  .hljs-section,
  .hljs-title,
  .hljs-type {
    color: #ffc66d;
  }
  
  .name,
  .selector-id,
  .selector-class,
  .hljs-name,
  .hljs-selector-id,
  .hljs-selector-class {
    color: #e8bf6a;
  }
  
  .emphasis,
  .hljs-emphasis {
    font-style: italic;
  }
  
  .strong,
  .hljs-strong {
    font-weight: bold;
  }
}