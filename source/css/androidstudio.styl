pre code.hljs {
  display: block;
  overflow-x: auto;
  padding: 0.3em;
  font-family: 'JetBrains Mono', Consolas, Monaco, 'Andale Mono', monospace;
  font-size: 0.9em;
  line-height: 1.35;
}

code.hljs {
  padding: 1px 2px;
  border-radius: 2px;
  font-size: 0.9em;
}

// 优化代码框结构
figure.highlight {
  margin: 0.8em 0;
  overflow: auto;
  position: relative;
  font-size: 0.9em;
  border-radius: 5px;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
  border: 1px solid rgba(255, 255, 255, 0.05);

  table {
    width: 100%;
    border-spacing: 0;
    margin: 0;
  }

  // 缩窄行号宽度
  .gutter {
    width: 2em;
    user-select: none;
    position: relative;
    background: rgba(0, 0, 0, 0.08);

    pre {
      text-align: right;
      padding: 0 0.2em 0 0;
      margin: 0;
      width: 100%;
      height: 100%;
      color: rgba(169, 183, 198, 0.4);
    }
  }

  .code {
    width: calc(100% - 2em);
    padding-left: 0.2em;
    padding-right: 0.2em;

    pre {
      margin: 0;
      width: 100%;
      height: 100%;
    }
  }

  // 修复竖线位置，变得更轻细
  .gutter::after {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    border-left: 1px solid rgba(255, 255, 255, 0.03);
  }

  // 移动端优化
  @media (max-width: 768px) {
    .gutter {
      width: 1.6em;
    }
    .gutter::after {
      left: 1.6em;
    }
    .code {
      width: calc(100% - 1.6em);
    }
  }
}

