<section class="posts">
    <div class="page-all-minbox">
    <% page.posts.each(function (post) { %>
        <div class="page-minbox">
        <article class="post">
            <div class="post-title">
                <a class="post-title-link hover-underline" href="<%- url_for(post.path)%>"><h2><%= post.title %></h2h2></a>
            </div>
            <div class="post-meta">
                <span class="post-time">
                    <i class="fa fa-clock"></i>
                    <%- date(post.date, 'YYYY-MM-DD HH:mm:ss') %>
                </span>
                <p style="margin: 0 3px;">||</p>
                <span class="post-time">
                    <i class="fa fa-refresh"></i>
                    <%- date(post.updated, 'YYYY-MM-DD HH:mm:ss') %>
                </span>
            </div>
            <div class="post-content">
                 <!--<%= post.content %>-->
                 <div></div>
                 <%- post.excerpt %>
            </div>
        </article>
        </div>
        <% }) %>
    </div>
</section>