<aside class="sidebar-left night box">
    <div class="sidebar-item">
      <h2 class="title-center"><%= config.title %></h2>
      <img class="avatar rounded-img" src="<%= url_for() %>images<%= theme.avatar %>" alt="avatar"></img>
      <h2 class="sidebar-author"><%= config.author %></h2>
      <div class="header-subtitle night"><%= config.subtitle %></div>
      <p class="sidebar-description"><%= config.description %></p>
      <ul class="social-links">
        <% for (let name in theme.social_links) { %>
          <% let [url, icon] = theme.social_links[name].split('||').map(item => item.trim()); %>
          <li class="social-links-item">
              <a href="<%= url %>" class="social-links-link">
                  <i class="fa <%= icon %>" aria-hidden="true"></i>
                  <p class="hover-underline"><%= name %></p>
              </a>
          </li>
      <% } %>
      </ul> 
    </div>
    <ul class="sidebar-menu">
    <li class="sidebar-menu-item big">
      <a href="<%= config.root %>archives/"><i class="fa fa-archive"></i></a>
      <a href="<%= config.root %>archives/" class="hover-underline"><%= site.posts.length %></a>
    </li>
    <li class="sidebar-menu-item big ">
      <a href="<%= config.root %>categories/"><i class="fa fa-th-large"></i></a>
      <a href="<%= config.root %>categories/" class="hover-underline"><%= site.categories.length %></a>
    </li>
    <li class="sidebar-menu-item big">
      <a href="<%= config.root %>tags/"><i class="fa fa-tags"></i></a>
      <a href="<%= config.root %>tags/" class="hover-underline"><%= site.tags.length %></a>
    </li>
    </ul>
</aside>